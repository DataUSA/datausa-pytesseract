        <Measure name="IGEE" key_column="igee" aggregator="avg">
            <Annotation name="source_name">Own elaboration</Annotation>
            <LocalizedAttr attr="caption" locale="es" value="Eficacia del gobierno indexado" />
            <LocalizedAttr attr="caption" locale="en" value="Indexed Government Effectiveness" />
        </Measure>
        <Measure name="FDI" key_column="fdi" aggregator="avg">
            <Annotation name="source_name">World Development Indicators, WB</Annotation>
            <Annotation name="source_link">https://databank.worldbank.org/source/world-development-indicators</Annotation>
            <Annotation name="units_of_measurement">USD</Annotation>
            <Annotation name="details">Millions</Annotation>
            <LocalizedAttr attr="caption" locale="es" value="Inversión extranjera directa, entradas netas de capital nominal" />
            <LocalizedAttr attr="caption" locale="en" value="Nominal oreign Direct Investment" />
        </Measure>
        <Measure name="ICPI" key_column="icpi" aggregator="avg">
            <Annotation name="source_name">Own elaboration</Annotation>
            <LocalizedAttr attr="caption" locale="es" value="Índice de percepción de la corrupción indexado" />
            <LocalizedAttr attr="caption" locale="en" value="Indexed Corruption Perceptions Index" />
        </Measure>
        <Measure name="ABSC" key_column="absc" aggregator="avg">
