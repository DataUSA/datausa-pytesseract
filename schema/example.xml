        <Measure name="SOCEXP Real" key_column="socexp_r" aggregator="avg">
            <Annotation name="source_name">CEPAL for central government (LATAM); OCDE Statistics (No LATAM)</Annotation>
            <Annotation name="source_link">https://statistics.cepal.org/portal/cepalstat/index.html?lang=es; https://stats.oecd.org/</Annotation>
            <Annotation name="units_of_measurement">USD</Annotation>
            <Annotation name="details">Millions</Annotation>
            <LocalizedAttr attr="caption" locale="es" value="Gasto público social real" />
            <LocalizedAttr attr="caption" locale="en" value="Real government social expenditure" />
        </Measure>
        <Measure name="BASEL" key_column="basel" aggregator="avg">
            <Annotation name="source_name">Basel Institute on Governance</Annotation>
            <Annotation name="source_link">https://index.baselgovernance.org/</Annotation>
            <LocalizedAttr attr="caption" locale="es" value="Índice AML de Basilea" />
            <LocalizedAttr attr="caption" locale="en" value="Basel AML Index" />
